<h1>Listing attendees</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Long</th>
    <th>Comment</th>
    <th>Invitation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attendees.each do |attendee| %>
  <tr>
    <td><%= attendee.lat %></td>
    <td><%= attendee.long %></td>
    <td><%= attendee.comment %></td>
    <td><%= attendee.invitation_id %></td>
    <td><%= link_to 'Show', attendee %></td>
    <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
    <td><%= link_to 'Destroy', attendee, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

